# OceanProxy Environment Configuration
# Copy this file to .env and update the values

# Application Environment
ENVIRONMENT=development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Authentication
BEARER_TOKEN=your-secure-bearer-token-here
JWT_SECRET=your-jwt-secret-key-here

# Database Configuration
DATABASE_DRIVER=json
DATABASE_DSN=/var/log/oceanproxy/proxies.json

# Redis Configuration (optional)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Provider API Keys
PROXIES_FO_API_KEY=your-proxies-fo-api-key
NETTIFY_API_KEY=your-nettify-api-key

# Proxy Configuration
PROXY_DOMAIN=oceanproxy.io
PROXY_START_PORT=10000
PROXY_END_PORT=20000
PROXY_CONFIG_DIR=/etc/3proxy
PROXY_LOG_DIR=/var/log/oceanproxy
PROXY_SCRIPT_DIR=./scripts
NGINX_CONF_DIR=/etc/nginx/conf.d

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL/TLS Configuration (optional)
TLS_CERT_FILE=
TLS_KEY_FILE=
TLS_ENABLED=false

# Development Settings
DEV_MODE=true
DEV_AUTO_RELOAD=true
DEV_DEBUG_ENDPOINTS=true

# Provider Specific Settings

# Proxies.fo Configuration
PROXIES_FO_BASE_URL=https://api.proxies.fo
PROXIES_FO_TIMEOUT=30s

# Nettify Configuration
NETTIFY_BASE_URL=https://api.nettify.xyz
NETTIFY_TIMEOUT=30s

# Regional Configuration
DEFAULT_REGION=usa
SUPPORTED_REGIONS=usa,eu,alpha,beta,asia

# Plan Type Configuration
DEFAULT_PLAN_TYPE=residential
SUPPORTED_PLAN_TYPES=residential,datacenter,isp,mobile,unlimited

# System Configuration
MAX_CONCURRENT_PLANS=1000
MAX_INSTANCES_PER_PLAN=10
CLEANUP_INTERVAL=1h
HEALTH_CHECK_INTERVAL=5m

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/var/backups/oceanproxy

# Security Configuration
ENABLE_REQUEST_LOGGING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
MAX_REQUEST_SIZE=10MB

# Performance Tuning
GO_MAX_PROCS=0
GC_PERCENT=100
GOMAXPROCS_OVERRIDE=

# External Services
WEBHOOK_URL=
WEBHOOK_SECRET=
NOTIFICATION_EMAIL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Feature Flags
ENABLE_LEGACY_ENDPOINTS=true
ENABLE_ADMIN_ENDPOINTS=true
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_SWAGGER_UI=true
ENABLE_HEALTH_CHECKS=true

# Advanced Configuration
PROXY_BUFFER_SIZE=4096
PROXY_TIMEOUT=30s
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Docker Configuration (for containerized deployment)
DOCKER_NETWORK=oceanproxy-network
DOCKER_VOLUME_LOGS=/var/log/oceanproxy
DOCKER_VOLUME_CONFIG=/etc/oceanproxy

# Kubernetes Configuration (for k8s deployment)
K8S_NAMESPACE=oceanproxy
K8S_SERVICE_ACCOUNT=oceanproxy-sa
K8S_INGRESS_CLASS=nginx

# Cloud Provider Configuration
CLOUD_PROVIDER=
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_KEY=

# Monitoring Integration
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000
ALERTMANAGER_ENDPOINT=http://localhost:9093

# Tracing
JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACE_SAMPLING_RATE=0.1

# Custom Headers
CUSTOM_HEADERS=X-OceanProxy-Version:1.0,X-Powered-By:OceanProxy